 <div class="container">
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <div class="myCreate">
           
      <form action="/admindata/<%=product._id%>?_method=PUT" method="POST">
        <div class="myForm text-center">
        <h2>Edit Form</h2>
      
          <div class="form-group">
          <input type="number" class="form-control" placeholder="Room ID" min="1" max="5" name="id" value="<%=product.id%>" >
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Room Type" name="types" value="<%=product.types%>" >
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Room Location" name="location" value="<%=product.location%>">
        </div>
        <div class="form-group">
          <input type="number" class="form-control" placeholder="Room Charge" name="charge" value="<%=product.charge%>">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="availability" name="roomstatus" value="<%=product.roomstatus%>">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="payment status" name="paymentstatus" value="<%=product.paymentstatus%>">
        </div>
        <button type="submit" class="btn btn-dark">Create</button>
        </div>
       
       
      </div>    
  </form>
